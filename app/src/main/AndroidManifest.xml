<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.waksh.winf114.wakker2" >

    <!-- Include required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="de.waksh.winf114.wakker2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.waksh.winf114.wakker2.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:parentActivityName="de.waksh.winf114.wakker2.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.waksh.winf114.wakker2.MainActivity" />
        </activity>

        <activity
            android:name="de.waksh.winf114.wakker2.HighscoreActivity"
            android:label="@string/title_activity_highscore"
            android:parentActivityName="de.waksh.winf114.wakker2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.waksh.winf114.wakker2.MainActivity" />
        </activity>

        <activity
            android:name="de.waksh.winf114.wakker2.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.waksh.winf114.wakker2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.waksh.winf114.wakker2.MainActivity" />
        </activity>

        <activity
            android:name="de.waksh.winf114.wakker2.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName="de.waksh.winf114.wakker2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.waksh.winf114.wakker2.MainActivity" />
        </activity>

        <activity
            android:name="de.waksh.winf114.wakker2.InstructionsActivity"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="de.waksh.winf114.wakker2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.waksh.winf114.wakker2.MainActivity" />
        </activity>

        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>
